@model IEnumerable< LN_WEB.Entities.CarritoEnt>
@{
    ViewBag.Title = "VerCarrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center" style="margin-top:80px;">
    <div class="col-lg-10">
        <h4 style="text-align: center; color: white">Pagar Vidreos</h4>
        <br />
        @if (ViewBag.MsjPantalla != null)
        {
            <div style="text-align:center" class="alert alert-warning" role="alert">
                @ViewBag.MsjPantalla
            </div>
        }
        @if (Model.Count() == 0)
        {
            <div style="text-align:center" class="alert alert-warning" role="alert">
                No hay Vidreos por cancelar...
            </div>
        }
        else
        {
            <table class="table table-hover table-bordered">
                <thead>
                    <tr style="text-align:center">
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Impuesto</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@Math.Round(item.Precio, 2)</td>
                            @*<td>@Math.Round(item.Impuesto, 2)</td>*@
                            <td style="text-align:center">
                                <a href="@Url.Action("RemoverCursoCarrito", "Carrito", new { q = item.IdVidreoCarrito })"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            using (Html.BeginForm("ConfirmarPago", "Carrito", FormMethod.Post))
            {
                <input style="width:270px" type="submit" value="Procesar Pago" class="btn btn-success">
                <p>El monto a cancelar es de: $ @Math.Round(double.Parse(Session["TotalVidreo"].ToString()), 2) IVI</p>
            }
        }
    </div>
</div>