<head>
    <style>
        body, th, td {
            color: white !important;
        }
    </style>
</head>
<body>
    @model IEnumerable<LN_WEB.Entities.VidreoEnt>

    @{
        ViewBag.Title = "ConsultarUsuarios";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="row justify-content-center mt-5">
        <div class="col-lg-10">
            <h4 class="text-center" style="color: #007bff;">Vidreos</h4>
            <br />

            @if (ViewBag.MsjPantalla != null)
            {
                <div class="alert alert-warning text-center" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            <div style="text-align:right">
                <a href="@Url.Action("Agregar", "Vidreo")" class="btn btn-primary" style="width:10%">Agregar</a>
            </div>
            <br />

            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Precio</td>
                                <td>@(item.Descripcion.Length > 100 ? item.Descripcion.Substring(0, 100) + "..." : item.Descripcion)</td>
                                <td style="text-align:center"><img src="@item.Imagen" width="200" height="110" /></td>
                                <td class="text-center">
                                    <a href="@Url.Action("Editar", "Vidreo", new { q = item.IdVidreo })" class="btn btn-sm btn-primary mr-1" title="Editar">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Vidreo", new { q = item.IdVidreo })" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
