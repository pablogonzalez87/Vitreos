    <script>
        $(document).ready(function () {
            // Inicializar el contenido con la clase slide-in
            $('#content').addClass('slide-in visible');

            // Manejar la transición al hacer clic en los enlaces
            $('a').on('click', function (event) {
                var link = $(this).attr('href');

                // Excluir enlaces específicos (Cerrar Sesión)
                if (link && link !== "#" && !$(this).hasClass('no-transition')) {
                    event.preventDefault();
                    $('#content').removeClass('visible').addClass('slide-out hidden');

                    setTimeout(function () {
                        // Cargar el nuevo contenido y aplicar la animación de entrada
                        $('#content').load(link + ' #content > *', function () {
                            $('#content').removeClass('slide-out hidden').addClass('slide-in visible');
                        });
                    }, 500); // Tiempo en ms que dura la animación de salida
                }
            });
        });
    </script>
