@model LN_WEB.Entities.VidreoEnt

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Agregar", "Vidreo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row justify-content-center" style="margin-top:80px;">
        <div class="col-lg-5">

            <h4 style="text-align: center; color: black">Registrar Información</h4>
            <br />

            @if (ViewBag.MsjPantalla != null)
            {
                <div style="text-align:center" class="alert alert-warning" role="alert">
                    @ViewBag.MsjPantalla
                </div>
            }

            <div class="card-body">

                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @placeholder = "Nombre", @class = "form-control" })
                    <label for="inputFirstName">Nombre</label>
                </div>

                <div class="form-floating mb-3">
                    @Html.TextAreaFor(m => m.Descripcion, new { @style = "height:200px", @placeholder = "Descripción", @class = "form-control" })
                    <label for="inputLastName">Descripción</label>
                </div>

                <div class="form-floating mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span style="height:60px" class="input-group-text">$</span>
                        </div>
                        @Html.TextBoxFor(m => m.Precio, new { @type = "number", @placeholder = "Precio", @class = "form-control" })
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input type="file" id="ImagenVidreo" name="ImagenVidreo" class="form-control" accept="image/png, image/jpeg, image/jpg">
                </div>

                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <a class="small"></a>
                    <button class="btn btn-primary" type="submit">Procesar</button>
                </div>
            </div>
        </div>
    </div>
}