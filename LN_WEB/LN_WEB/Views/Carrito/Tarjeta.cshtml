@model IEnumerable<LN_WEB.Entities.CarritoEnt>
@{
    ViewBag.Title = "Simpe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmación de Pago Simpe</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Agregar Font Awesome -->
    <style>
        /* Estilos CSS */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        form {
            margin: auto;
            max-width: 500px;
            padding: 20px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #007bff; /* Color azul */
        }

        .card-header {
            background-color: #007bff;
            color: white;
            padding: 12px;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            text-align: center;
        }

        .card-body {
            padding: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #007bff;
            margin-top: 0;
        }

        p {
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .info-box {
            background-color: #e9ecef;
            border-left: 5px solid #007bff;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 4px;
        }

        input[type="submit"] {
            width: 100%;
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .icon {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <form action="@Url.Action("ConfirmarPago", "Carrito")" method="post">
        <div class="card-header">
            <img src="~/images/si.jpeg" alt="Logo" style="max-width: 150px; display: block; margin: auto;">
        </div>

        <div class="card-body">
            <h2>Confirmación de Pago Sinpe</h2>
            <div class="info-box">
                <p><i class="fas fa-info-circle icon"></i><strong>Importante:</strong> Por favor asegúrese de haber realizado el pago correspondiente a través del servicio Simpe antes de confirmar.</p>
            </div>
            <p>El monto a pagar es de: <strong>$ @Math.Round(double.Parse(Session["TotalVidreo"].ToString()), 2)</strong></p>
            <p>Para confirmar su pago, la tienda vitreos le agradece por confiar en nosotros y ser parte de sus proyectos .</p>

            <input type="hidden" id="monto" name="monto" value="@Math.Round(double.Parse(Session["TotalVidreo"].ToString()), 2)">
            <input type="submit" value="Confirmar Pago">
        </div>
    </form>

</body>
</html>
