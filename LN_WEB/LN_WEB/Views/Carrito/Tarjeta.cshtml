@model IEnumerable<LN_WEB.Entities.CarritoEnt>
@{
    ViewBag.Title = "Tarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Tarjeta de Crédito</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Agregar Font Awesome -->
    <style>
        /* Estilos CSS */
        form {
            margin: auto;
            max-width: 400px;
            padding: 20px;
            background-color: #f0f0f0;
            border-radius: 12px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #007bff; /* Color azul */
        }

        .card-header {
            background-color: #007bff;
            color: white;
            padding: 12px;
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
        }

        .card-body {
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #000; /* Texto negro */
            margin-top: 0;
        }

        label {
            color: #000; /* Texto negro */
            font-weight: bold;
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid #007bff; /* Color azul */
            border-radius: 4px;
            background-color: #f8f9fa; /* Cambiado de azul a gris claro */
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        input[type="submit"] {
            width: 100%;
            background-color: #007bff;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        .icon {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <form action="@Url.Action("ConfirmarPago", "Carrito")" method="post">
        <div class="card-header">
            <img src="~/images/R.png" alt="Logo" style="max-width: 300px; display: block; margin: auto;">
        </div>

        <div class="card-body">
            <label for="nombre"><i class="fas fa-user icon"></i> Nombre en la Tarjeta:</label>
            <input type="text" id="nombre" name="nombre" required><br>

            <label for="numero"><i class="fas fa-credit-card icon"></i> Número de Tarjeta:</label>
            <input type="text" id="numero" name="numero" required pattern="[0-9]{16}"><br>

            <label for="expiracion"><i class="far fa-calendar-alt icon"></i> Fecha de Expiración (MM/AA):</label>
            <input type="text" id="expiracion" name="expiracion" required pattern="(0[1-9]|1[0-2])\/([0-9]{2})"><br>

            <label for="cvv"><i class="fas fa-lock icon"></i> CVV:</label>
            <input type="text" id="cvv" name="cvv" required pattern="[0-9]{3}"><br>

            <input type="hidden" id="monto" name="monto" value="@Math.Round(double.Parse(Session["TotalVidreo"].ToString()), 2)">
            <p>El monto a pagar es de: $ @Math.Round(double.Parse(Session["TotalVidreo"].ToString()), 2)</p>

            <input type="submit" value="Confirmar Pago">
        </div>
    </form>

</body>
</html>



