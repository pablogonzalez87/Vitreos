@{
    ViewBag.Title = "PasarelaPagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.MsjPantalla != null)
{
    <div style="text-align:center" class="alert alert-warning" role="alert">
        @ViewBag.MsjPantalla
    </div>
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pasarela de Pagos</title>
</head>
<body>
    <div class="container">
        <h1>Pago Seguro</h1>
        <form method="post" action="/Pago/ProcesarPago">
            <div class="form-group">
                <label asp-for="NombreTitular">Nombre del Titular:</label>
                <input asp-for="NombreTitular" class="form-control" style="padding: 6px; font-size: 12px;" placeholder="Nombre del Titular" required>
            </div>
            <div class="form-group">
                <label asp-for="NumeroTarjeta">Número de Tarjeta:</label>
                <input asp-for="NumeroTarjeta" class="form-control" placeholder="Número de Tarjeta" required>
            </div>
            <div class="form-group">
                <label asp-for="FechaExpiracion">Fecha de Expiración:</label>
                <input asp-for="FechaExpiracion" class="form-control" placeholder="MM/AA" required>
            </div>
            <div class="form-group">
                <label asp-for="CodigoCVV">Código CVV:</label>
                <input asp-for="CodigoCVV" class="form-control" maxlength="3" placeholder="CVV" required>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Pagar</button>
            <button class="checkout-button">Proceder al Pago</button>
        </form>
    </div>
</body>
</html>

