@{
    ViewBag.Title = "Redes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redes Sociales</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Enlace a Font Awesome -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 10px 20px;
        }

        .breadcrumb-text {
            margin: 10px 0;
        }

            .breadcrumb-text img {
                max-width: 100%;
                height: auto;
            }

            .breadcrumb-text h1 {
                color: #fff; /* Cambia el color del título "Redes Sociales" a blanco */
            }

        .social-info {
            background: #333; /* Fondo azul */
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease, transform 0.3s ease;
            color: #fff;
            margin-top: 20px;
            position: relative;
            max-width: 400px; /* Ancho máximo del cuadro */
            margin: 0 auto; /* Centra el cuadro horizontalmente */
            border: 3px solid #fff; /* Añade un borde blanco */
        }

            .social-info:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                transform: translateY(-10px);
            }

            .social-info h2, .social-info p {
                margin-bottom: 20px;
            }

            .social-info h2 {
                font-size: 24px;
                color: #fff;
            }

            .social-info p {
                font-size: 16px;
                line-height: 1.6;
                color: #fff;
            }

        .social-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .social-item i {
                font-size: 24px;
                margin-right: 10px;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <h1>Redes Sociales</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="profile">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 social-info">
                    <h2>Conéctate con Nosotros</h2>

                    <div class="social-item">
                        <i class="fab fa-instagram"></i>
                        <p>Instagram: Vitreos_24</p>
                    </div>

                    <div class="social-item">
                        <i class="fab fa-facebook-f"></i>
                        <p>Facebook: Vitreos_24</p>
                    </div>

                    <div class="social-item">
                        <i class="fas fa-envelope"></i>
                        <p>Email: ventas@vitreos.net</p>
                    </div>

                    <div class="social-item">
                        <i class="fas fa-phone-alt"></i>
                        <p>Teléfono:(506) 2244-8395</p>
                    </div>
                        <div class="social-item">
                            <i class="fas fa-phone-alt"></i>
                            <p>Teléfono(506) 8871-8662</p>
                        </div>
                    </div>
                </div>
        </div>
    </section>

</body>
</html>
