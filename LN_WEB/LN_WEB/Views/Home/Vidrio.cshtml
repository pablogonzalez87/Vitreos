
﻿@model IEnumerable<LN_WEB.Entities.VidreoEnt>
@{
    ViewBag.Title = "Vidrio";
    Layout = "~/Views/Home/Vidrio.cshtml";
}

@ViewBag.

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@item.Imagen" class="card-img-top" alt="@item.Nombre">
                <div class="card-body" style="background-color: #f0f0f0;">
                    <h5 class="card-title">@item.Nombre</h5>
                    <p class="card-text">@item.Descripcion</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="price">Precio: $@item.Precio</p>
                        <a href="@Url.Action("AgregarVidreoCarrito","Carrito", new { q = item.IdVidreo})" class="btn btn-primary add-to-cart-btn" onclick="addToCart('Vidrios 1', '@item.Precio')">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1 class="section-header-yellow section-header-sm" style="color: white;">Tipos de Vidrios</h1>
            <div>
                <p style="color: white;">Cantidad de Vidreos: <span class="cantidad-vidreos">@Session["CantidadVidreos"].ToString()</span></p>
                <p style="color: white;">Subtotal de Vidreos: <span class="subtotal-vidreos">@Session["subTotalVidreos"].ToString()</span></p>
            </div>
        </div>
    </div>

    
</div>

<style>
    .section-header-yellow {
        color: #ff6a00; /* Color naranja suave */
    }

    .section-header {
        margin-bottom: 50px;
        font-size: 36px;
        color: #333;
    }

    .section-header-sm {
        font-size: 24px; /* Tamaño de fuente más pequeño */
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 15px;
        margin-bottom: 30px;
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .card-text {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 0 0 15px 15px;
        color: #555;
    }

    .price {
        font-size: 18px;
        color: #333;
        margin-bottom: 0;
    }

    .add-to-cart-btn {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .add-to-cart-btn:hover {
            background-color: #0056b3;
        }
</style>
