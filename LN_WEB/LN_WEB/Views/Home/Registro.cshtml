@model Tienda_Vidreos.Entities.UsuarioEnt

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout - Login.cshtml";
}

@using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-md-6 col-lg-5 col-xl-4">
                <div class="card shadow-lg p-4" style="background-color: rgba(255, 255, 255, 0.9);">
                    <div class="text-center mb-4">
                        <h3 class="mt-3 text-dark">Registrar</h3>
                    </div>

                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewBag.MsjPantalla
                        </div>
                    }

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control", placeholder = "Identificación" })
                    </div>
                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.Nombre, new { @type = "text", @class = "form-control", placeholder = "Nombre" })
                    </div>
                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.CorreoElectronico, new { @type = "email", @class = "form-control", @placeholder = "correo@correo.com" })
                    </div>
                    <div class="mb-4">
                        @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", placeholder = "Contraseña" })
                    </div>
                    <button type="submit" class="btn btn-primary btn-block py-3 mb-4">Registrarse</button>
                    <p class="text-center mb-0">Si ya tiene una cuenta <a href="@Url.Action("Login", "Home")">Inicie Sesión</a></p>
                </div>
            </div>
        </div>
    </div>
}
