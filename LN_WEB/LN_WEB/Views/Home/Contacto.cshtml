@{
    ViewBag.Title = "Contacto";
}

@if (ViewBag.MsjPantalla != null)
{
    <div style="text-align:center" class="alert alert-warning" role="alert">
        @ViewBag.MsjPantalla
    </div>
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2 text-center">
            <div class="breadcrumb-text">
                <p class="text-uppercase text-muted" style="color: white;">Tienda de Vidrios</p>
                <h1 class="display-4" style="color: white;">Contacto</h1>
            </div>
        </div>
    </div>
</div>

<!-- end breadcrumb section -->
<!-- contact form -->
<div class="contact-from-section mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="info-box p-4 border rounded shadow-sm" style="background-color: #696969;" data-aos="fade-up">
                    <div class="row">
                        <div class="col-md-6 mb-4 mb-md-0" data-aos="fade-right">
                            <div class="img-container border p-2 rounded" style="background-color: #505050;">
                                <img src="~/images/w.jpeg" alt="Imagen descriptiva" class="img-fluid rounded" style="width: 100%;">
                            </div>
                        </div>
                        <div class="col-md-6" data-aos="fade-left">
                            <div class="p-4 border rounded shadow-sm" style="background-color: #505050;">
                                <h2 class="font-weight-bold" style="color: white;">Bienvenido a Nuestra Tienda</h2>
                                <p style="color: white;">Aquí puedes encontrar los mejores productos de vidrio y recibir la mejor atención de nuestro equipo. No dudes en contactarnos para cualquier consulta o información adicional que necesites.</p>
                                <div class="contact-form-box mb-4">
                                    <h4><i class="fas fa-map" style="color: #ff7f50;"></i> Dirección de la tienda</h4>
                                    <p style="color: white;">Ruta 116 / Santo Tomás - San Vicente</p>
                                </div>
                                <div class="contact-form-box mb-4">
                                    <h4><i class="far fa-clock" style="color: #ff7f50;"></i> Horario de la tienda</h4>
                                    <p style="color: white;">Lunes a Viernes: 08:00 AM a 05:00 PM<</p>
                                </div>
                                <div class="contact-form-box mb-4">
                                    <h4><i class="fas fa-address-book" style="color: #ff7f50;"></i> Contacto</h4>
                                    <p style="color: white;">Teléfono: 4000 3597<br>Email:ventas@vitreos.net</p>
                                </div>
                                <a href="https://wa.me/50687517749" class="btn btn-success mt-4" target="_blank">
                                    <i class="fab fa-whatsapp"></i> Contactar por WhatsApp
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- end contact form -->
<!-- find our location -->
<div class="find-location blue-bg py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <p class="h4 mb-0" style="color: white;" data-aos="fade-up"><i class="fas fa-map-marker-alt" style="color: #ff7f50;"></i> Nuestra ubicación</p>
            </div>
        </div>
    </div>
</div>
<div>

</div>
<div>

</div>
<!-- end find our location -->
<!-- google map section -->
<!-- end find our location -->
<!-- google map section -->
<div class="embed-responsive embed-responsive-21by9" data-aos="zoom-in">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d157.576444!2d-84.073627!3d9.985178!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0e5ad6618589f%3A0xbc39eab63e05f63c!2sRuta%20116%20%2F%20Santo%20Tom%C3%A1s%20-%20San%20Vicente!5e0!3m2!1ses-419!2scr!4v1689908801500!5m2!1ses-419!2scr" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" class="embed-responsive-item"></iframe>
</div>
<!-- end google map section -->


<style>
    .info-box {
        background-color: #696969;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .img-container {
        text-align: center;
        border: 2px solid #bbb;
        padding: 10px;
        border-radius: 10px;
        background-color: #505050;
    }

        .img-container img {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

    .btn-success {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

        .btn-success:hover {
            color: #fff;
            background-color: #218838;
            border-color: #1e7e34;
        }

    .blue-bg {
        background-color: #007bff;
        color: #fff;
    }

    .breadcrumb-text p {
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: white;
    }

    .breadcrumb-text h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: white;
    }

    .contact-from-section p,
    .contact-form-box p,
    .find-location p,
    .find-location h4 {
        color: white !important;
    }

    .contact-form-box h4,
    .find-location h4 {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: white;
    }

    .embed-responsive-item {
        background-color: #fff;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init();
</script>
